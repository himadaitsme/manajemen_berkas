CREATE TABLE PENGHAPUSAN_NPWP(
	ID VARCHAR(36) PRIMARY KEY,
	NO_BPS VARCHAR(50) NOT NULL UNIQUE,
	TGL_BPS DATE NOT NULL,
	NPWP VARCHAR(15) NOT NULL,
	NAMA_WP VARCHAR(100),
	NOHP_WP VARCHAR(20),
	JENIS_WP VARCHAR(2),
	TGL_ND_P3 DATE,
	TGL_JT DATE,
	NO_LHP VARCHAR(50),
	TGL_LHP DATE,
	TGL_LHP_PLY DATE,
	PETUGAS_CETAK_PH VARCHAR(50),
	PUTUSAN VARCHAR(50),
	NO_SK VARCHAR(50),
	TGL_SK DATE,
	TGL_REKAM_PERMOHONAN TIMESTAMP without time zone,
	PEREKAM_PERMOHONAN VARCHAR(15),
	STATUS VARCHAR(2)
);


CREATE TABLE REF_UNIT_ORG(
	ID VARCHAR(2) PRIMARY KEY,
	LEVEL_UNIT VARCHAR(2)  NOT NULL,
	NAMA_UNIT VARCHAR(50) NOT NULL
);

CREATE TABLE USER_PEGAWAI(
	IP VARCHAR(9) PRIMARY KEY,
	NIP VARCHAR(18)  NOT NULL,
	NAMA VARCHAR(50) NOT NULL,
	PASSWORD VARCHAR(50),
	ID_UNIT_ORG VARCHAR(2),
	ID_JABATAN VARCHAR(2)
);

CREATE TABLE REF_JABATAN (
	ID VARCHAR(2) PRIMARY KEY,
	NAMA_JABATAN VARCHAR(50) NOT NULL
);

0 - KEPALA KANTOR
1 - KASI
2 - PELAKSANA
3 - FUNGSIONAL PEMERIKSA PAJAK
4 - FUNGSIONAL PENILAI PAJAK
5 - FUNGSIONAL ASISTEN PENYULUH
